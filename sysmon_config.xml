<Sysmon schemaversion="4.11">
  <EventFiltering>

    <!-- Capture process creation for sc_clone.exe -->
    <ProcessCreate onmatch="include">
      <Image condition="contains">sc_clone.exe</Image>
    </ProcessCreate>

    <!-- Capture service configuration changes -->
    <ServiceConfigurationChange onmatch="include">
      <ServiceName condition="contains">sc_clone</ServiceName>
    </ServiceConfigurationChange>

    <!-- Capture process start events -->
    <ProcessStart onmatch="include">
      <Image condition="contains">sc_clone.exe</Image>
    </ProcessStart>

    <!-- Capture service start and stop events -->
    <ServiceStateChange onmatch="include">
      <ServiceName condition="contains">sc_clone</ServiceName>
    </ServiceStateChange>

    <!-- Capture registry modifications for service-related actions -->
    <RegistryEvent onmatch="include">
      <Key condition="contains">SYSTEM\\CurrentControlSet\\Services</Key>
    </RegistryEvent>

    <!-- Capture process termination -->
    <ProcessTerminate onmatch="include">
      <Image condition="contains">sc_clone.exe</Image>
    </ProcessTerminate>

  </EventFiltering>
</Sysmon>
